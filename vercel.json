{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "api/projects.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/experiences.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/skills.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/achievements.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/test.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/projects(.*)",
      "destination": "/api/projects.js"
    },
    {
      "source": "/api/experiences",
      "destination": "/api/experiences.js"
    },
    {
      "source": "/api/skills",
      "destination": "/api/skills.js"
    },
    {
      "source": "/api/achievements",
      "destination": "/api/achievements.js"
    },
    {
      "source": "/api/test",
      "destination": "/api/test.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)\\.js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        }
      ]
    },
    {
      "source": "/assets/(.*)\\.css",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/css"
        }
      ]
    },
    {
      "source": "/images/(.*)\\.svg",
      "headers": [
        {
          "key": "Content-Type",
          "value": "image/svg+xml"
        }
      ]
    },
    {
      "source": "/images/(.*)\\.(jpg|jpeg|png|gif|webp)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "image/$2"
        }
      ]
    }
  ]
}
